
 # checkout app:
   svn clone .../hg-app/.../src src/

 # checkout hologram:
   git clone .../hg/... src/hg/

 # prepare upload directory:
   mkdir -m 0700 upload/
   chown www-data:www-data upload/

 # local configuration
   # database credentials
     cp src/app/conf/conf.db.php conf/
     edit conf/conf.db.php
   # API keys
     cp src/app/conf/conf.keys.php conf/
     edit conf/conf.keys.php

 # configure apache
   # create vhost pointing to $PWD/src/app/htdocs/
   # create alias 'hg/' poining to $PWD/src/hg/htdocs/
   # allow .htaccess magic tricks

 # http://host.name/, enable favourite debugs

